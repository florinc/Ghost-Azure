{{#foreach posts}}
<article class="{{post_class}} item">
    {{#if feature_image}}
        <a href="{{url}}">
            <div class="featured-media"><img src="{{feature_image}}" alt="Post-image" class="img-responsive"></div>
        </a>
    {{/if}}
    {{#if featured}}
    <div class="featured-ribbon">
        <i class="fa fa-star"></i>{{t "Featured"}}
    </div>
    {{/if}}
    <div class="post-content">
        <header>
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <div class="post-meta">{{date format="MMMM DD, YYYY"}}</div>
        </header>
        <div class="post-excerpt">
            {{excerpt words="32"}}
        </div>
        <div class="tag-list">
                {{tags separator=""}}
        </div>
        <hr/>
        <footer class="clearfix">
            <div class="pull-left">
                {{#primary_author}}
                {{#if profile_image}}
                <a href="{{url}}"><img src="{{profile_image}}" alt="Author image" class="avatar"></a>
                {{else}}
                <a href="{{url}}"><img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar"></a>
                {{/if}}
                <a href="{{url}}" class="author-name">{{name}}</a>
                {{/primary_author}}
            </div>
            <div class="pull-right comments">
                <i class="fa fa-comment-o"></i> <a href="{{url}}#disqus_thread">0 Comments</a>
            </div>
        </footer>
    </div>
</article>
{{/foreach}}