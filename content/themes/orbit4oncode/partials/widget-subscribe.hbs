{{!-- {{#if @labs.subscribers}} --}}
<div class="widget">
    <div class="content subscribe-widget">
        <p>{{t "Get all the latest posts delivered straight to your inbox."}}</p>
        <form class="signup-form" data-members-form="subscribe">
            <div class="form-field-wrap field-group-inline">
                <label for="email" class="sr-only">{{t "Email"}}</label>
                <input data-members-email type="email" class="email" id="email" placeholder="{{t "Your email address"}}" required="">
                <button class="btn btn-primary" type="submit"><i class="fa fa-circle-o-notch fa-spin loading-icon"></i>{{t "Subscribe"}}</button>
            </div>
            <div class="text-center">
                <div class="message-success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to confirm your subscription"}}</div>
                <div class="message-error"><strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}</div>
            </div>
        </form>
    </div>
</div>
{{!-- {{/if}} --}}