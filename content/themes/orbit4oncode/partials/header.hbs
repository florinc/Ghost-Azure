{{! Start main header}}
<header class="header" {{#if @site.cover_image}}style="background-image: url({{@site.cover_image}})"{{/if}}>
	<div class="header-content-wrapper">
		<!-- start branding -->
		<div class="branding">
			{{#if @site.logo}}
            <a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
            {{else}}
            <a href="{{@site.url}}">{{@site.title}}</a>
            {{/if}}
		</div>
		<!-- end branding -->
		<!-- start intro text -->
		<div class="intro">
			{{@site.description}}
		</div>
		<!-- end intro text -->
		<div class="header-bottom hidden-sm hidden-xs">
			{{! insert slocial links}}
			{{> social_link}}
			{{! Insert copyright partial}}
			{{> copyright}}
		</div>
	</div>
	<i class="fa fa-angle-left toggle-button hidden-sm hidden-xs"></i>
</header>
{{! end main header}}